{
  "name": "revue-async-example",
  "version": "1.0.0",
  "description": "An async example with Revue.",
  "main": "index.js",
  "scripts": {
    "start": "npm run build:watch & npm run browsersync",
    "browsersync": "browser-sync start -f ./docs -s ./docs",
    "build": "browserify src/index.js -t babelify -t vueify -o ./docs/js/index.js && cp index.html docs/",
    "build:watch": "watchify src/index.js -t babelify -t vueify -o ./docs/js/index.js",
    "lint": "eslint src"
  },
  "repository" : {
    "type" : "git",
    "url" : "https://github.com/GarthDB/revue-async-example.git"
  },
  "author": "Garth Braithwaite <garthdb@gmail.com> (http://garthdb.com)",
  "license": "Apache-2.0",
  "dependencies": {
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "revue": "^3.0.0",
    "vue": "^2.2.2"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.8",
    "eslint": "^3.17.1",
    "eslint-config-garthdb": "^0.2.0",
    "vueify": "^9.4.1",
    "watchify": "^3.9.0"
  }
}
